# Editor configuration for consistent formatting across DevRelay.
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4
max_line_length = 120

[*.py]
indent_size = 4
max_line_length = 120

[*.pyi]
indent_size = 4
max_line_length = 120

[*.toml]
indent_size = 4

[*.ini]
indent_size = 4

[*.json]
indent_size = 2

[*.yml]
indent_size = 2

[*.yaml]
indent_size = 2

[*.md]
indent_size = 2
max_line_length = 120
trim_trailing_whitespace = true

[Makefile]
indent_style = tab

[*.mk]
indent_style = tab
